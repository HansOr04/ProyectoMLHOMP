@using System.Security.Claims
@using ProyectoMLHOMP.Models
@model IEnumerable<ProyectoMLHOMP.Models.Apartment>

@{
    ViewData["Title"] = "Departamentos";
    var isHost = (bool)ViewData["IsHost"];
    var currentUserId = (int)ViewData["CurrentUserId"];
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    @if (isHost)
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Departamento</a>
        </p>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.City, @item.Country</h6>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                @item.Bedrooms habitaciones | @item.Bathrooms baños
                                <br>
                                Máximo @item.MaxOccupancy personas
                            </small>
                        </p>
                        <p class="card-text"><strong>$@item.PricePerNight por noche</strong></p>

                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.ApartmentId" class="btn btn-info">Detalles</a>
                            @if (isHost && item.UserId == currentUserId)
                            {
                                <a asp-action="Edit" asp-route-id="@item.ApartmentId" class="btn btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.ApartmentId" class="btn btn-danger">Eliminar</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}