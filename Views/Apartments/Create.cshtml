@model ProyectoMLHOMP.Models.Apartment

@{
    ViewData["Title"] = "Crear Departamento";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">Crear Nuevo Departamento</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Title" class="form-label">Título</label>
                                <input asp-for="Title" class="form-control" placeholder="Ingrese el título del departamento" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descripción</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describa el departamento"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PricePerNight" class="form-label">Precio por Noche</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="PricePerNight" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Address" class="form-label">Dirección</label>
                                <input asp-for="Address" class="form-control" placeholder="Ingrese la dirección completa" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label">Ciudad</label>
                                <input asp-for="City" class="form-control" placeholder="Ingrese la ciudad" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label">País</label>
                                <input asp-for="Country" class="form-control" placeholder="Ingrese el país" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Bedrooms" class="form-label">Habitaciones</label>
                                <input asp-for="Bedrooms" class="form-control" type="number" min="1" />
                                <span asp-validation-for="Bedrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Bathrooms" class="form-label">Baños</label>
                                <input asp-for="Bathrooms" class="form-control" type="number" min="1" />
                                <span asp-validation-for="Bathrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="MaxOccupancy" class="form-label">Ocupación Máxima</label>
                                <input asp-for="MaxOccupancy" class="form-control" type="number" min="1" />
                                <span asp-validation-for="MaxOccupancy" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsAvailable" class="form-check-label">Disponible para reservas</label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Crear Departamento</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Validación del lado del cliente
        $(document).ready(function () {
            $('form').submit(function () {
                if ($(this).valid()) {
                    $(this).find(':submit').prop('disabled', true);
                    $(this).find(':submit').html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Creando...');
                }
            });
        });
    </script>
}