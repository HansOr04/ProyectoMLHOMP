@model ProyectoMLHOMP.Models.Apartment
@using System.Security.Claims

@{
    ViewData["Title"] = Model.Title;
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var isOwner = userId != null && Model.UserId == int.Parse(userId);
    var userBookings = Model.Bookings?.Where(b => b.UserId.ToString() == userId).ToList();
}

<div class="container mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Detalles del Apartamento -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">@Model.Title</h2>
                    @if (isOwner)
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.ApartmentId" class="btn btn-light btn-sm me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.ApartmentId" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    }
                </div>
                <div class="card-body">
                    <h5 class="card-subtitle mb-3 text-muted">
                        <i class="fas fa-map-marker-alt"></i> @Model.City, @Model.Country
                    </h5>

                    <p class="card-text">@Model.Description</p>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <i class="fas fa-bed"></i> @Model.Bedrooms habitaciones
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-bath"></i> @Model.Bathrooms baños
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-users"></i> Máx. @Model.MaxOccupancy personas
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <h4 class="alert-heading">Precio por noche: $@Model.PricePerNight.ToString("F2")</h4>
                        <p class="mb-0">
                            Estado:
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Disponible</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No disponible</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Sección de Reservas - Solo visible para dueño o huéspedes que han reservado -->
            @if (isOwner || (userBookings != null && userBookings.Any()))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                        <h3 class="h5 mb-0">
                            <i class="fas fa-calendar-check"></i>
                            @(isOwner ? "Reservas del Apartamento" : "Tus Reservas")
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        @if (isOwner)
                                        {
                                            <th>Huésped</th>
                                        }
                                        <th>Llegada</th>
                                        <th>Salida</th>
                                        <th>Huéspedes</th>
                                        <th>Total</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var bookingsToShow = isOwner ? Model.Bookings : userBookings;
                                    }
                                    @if (bookingsToShow != null)
                                    {
                                        @foreach (var booking in bookingsToShow.OrderByDescending(b => b.StartDate))
                                        {
                                            <tr>
                                                @if (isOwner)
                                                {
                                                    <td>@booking.Guest?.Username</td>
                                                }
                                                <td>@booking.StartDate.ToString("dd/MM/yyyy")</td>
                                                <td>@booking.EndDate.ToString("dd/MM/yyyy")</td>
                                                <td>@booking.NumberOfGuests</td>
                                                <td>$@booking.TotalPrice.ToString("F2")</td>
                                                <td>
                                                    @{
                                                        var today = DateTime.Today;
                                                        string status;
                                                        string statusClass;

                                                        if (booking.EndDate < today)
                                                        {
                                                            status = "Completada";
                                                            statusClass = "success";
                                                        }
                                                        else if (booking.StartDate > today)
                                                        {
                                                            status = "Próxima";
                                                            statusClass = "primary";
                                                        }
                                                        else
                                                        {
                                                            status = "En curso";
                                                            statusClass = "warning";
                                                        }
                                                    }
                                                    <span class="badge bg-@statusClass">@status</span>
                                                </td>
                                                <td>
                                                    @if (booking.StartDate > DateTime.Today.AddDays(2))
                                                    {
                                                        <div class="btn-group">
                                                            <a asp-controller="Bookings"
                                                               asp-action="Edit"
                                                               asp-route-id="@booking.BookingId"
                                                               class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a asp-controller="Bookings"
                                                               asp-action="Delete"
                                                               asp-route-id="@booking.BookingId"
                                                               class="btn btn-sm btn-outline-danger">
                                                                <i class="fas fa-times"></i>
                                                            </a>
                                                        </div>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- Sección de Reseñas -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-comments"></i> Reseñas y Comentarios
                    </h3>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <a asp-controller="Reviews"
                           asp-action="Create"
                           asp-route-apartmentId="@Model.ApartmentId"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Escribir Reseña
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedDate))
                        {
                            <div class="mb-3 pb-3 border-bottom">
                                <h5>@review.Title</h5>
                                <div class="text-warning mb-2">
                                    @for (int i = 0; i < review.OverallRating; i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                </div>
                                <p>@review.Content</p>
                                <div class="text-muted small">
                                    Por @review.Reviewer?.Username el @review.CreatedDate.ToShortDateString()
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted my-4">
                            <i class="fas fa-comment-slash fa-2x mb-2"></i><br />
                            No hay reseñas todavía. ¡Sé el primero en opinar!
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Sección de Reserva -->
        <div class="col-md-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-success text-white">
                    <h3 class="h5 mb-0"><i class="fas fa-calendar-alt"></i> Realizar Reserva</h3>
                </div>
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        if (Model.IsAvailable && !isOwner)
                        {
                            <a asp-controller="Bookings"
                               asp-action="Create"
                               asp-route-id="@Model.ApartmentId"
                               class="btn btn-success btn-lg w-100">
                                <i class="fas fa-book"></i> Reservar Ahora
                            </a>
                        }
                        else if (isOwner)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                No puedes reservar tu propio apartamento
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-ban"></i>
                                Este apartamento no está disponible
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <a asp-controller="Users"
                               asp-action="Login"
                               asp-route-returnUrl="@Url.Action("Details", "Apartments", new { id = Model.ApartmentId })">
                                Inicia sesión para reservar
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto ocultar alertas después de 5 segundos
            setTimeout(function() {
                    $('.alert-success, .alert-danger').fadeOut('slow');
                    }, 5000);

                    // Tooltip para los iconos
                    $('[data-bs-toggle="tooltip"]').tooltip();
                });
    </script>
}